<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bgcover"
            android:elevation="8dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/ancien_mdp"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="80dp"
                android:background="#11000000"
                android:drawableLeft="@drawable/ic_lock_outline_blanc_24dp"
                android:ems="10"
                android:hint=" Ancien mot de passe"
                android:inputType="textPassword"
                android:text=""
                android:textColor="#fff"
                android:textColorHint="#ffffff" />
            <EditText
                android:id="@+id/new_mdp"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:background="#11000000"
                android:drawableLeft="@drawable/ic_lock_outline_blanc_24dp"
                android:ems="10"
                android:hint=" Nouveau mot de passe"
                android:inputType="textPassword"
                android:text=""
                android:textColor="#fff"
                android:textColorHint="#ffffff" />
            <EditText
                android:id="@+id/confirme_mdp"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:background="#11000000"
                android:drawableLeft="@drawable/ic_lock_outline_blanc_24dp"
                android:ems="10"
                android:hint=" Confirmer mot de passe"
                android:inputType="textPassword"
                android:text=""
                android:textColor="#fff"
                android:textColorHint="#ffffff" />

            <Button
                android:id="@+id/suivant"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimary"
                android:text="Enregistrer"
                android:onClick="changerMDP"
                android:textColor="#ffffff" />

        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigationView"
        app:itemIconTint="@color/colorPrimaryDark"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        >
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
